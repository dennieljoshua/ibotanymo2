<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/plantImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/platform"
        app:layout_constraintEnd_toEndOf="@+id/platform"
        app:layout_constraintStart_toStartOf="@+id/platform"
        app:layout_constraintTop_toTopOf="@+id/platform"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/ic_launcher" />

    <ImageView
        android:id="@+id/platform"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/platform" />

    <TextView
        android:id="@+id/plantName"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/colorPrimaryDark"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Plant Name"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/platform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/platform"
        app:layout_constraintVertical_bias="0.89" />

    <TextView
        android:id="@+id/ageBG2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/age_circle"
        app:layout_constraintBottom_toBottomOf="@+id/platform"
        app:layout_constraintEnd_toEndOf="@+id/platform" />

    <TextView
        android:id="@+id/plannerAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16"
        android:textAlignment="center"
        android:textColor="@color/flatWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/ageBG2"
        app:layout_constraintEnd_toEndOf="@+id/ageBG2"
        app:layout_constraintStart_toStartOf="@+id/ageBG2"
        app:layout_constraintTop_toTopOf="@+id/ageBG2" />
</android.support.constraint.ConstraintLayout>